{
  "default": {
    "formatOptions": {
      "snippetInterface": "async-await"
    },
    "paths": ["tests/features/**/*.feature"],
    "publishQuiet": true,
    "dryRun": false,
    "require": ["tests/steps/*.ts", "tests/hooks/*.ts"],
    "requireModule": ["ts-node/register"],
    "format": [
      "progress-bar",
      "html:test-results/cucumber-report.html",
      "json:test-results/cucumber-report.json",
      "rerun:@rerun.txt"
    ],
    "parallel": 2
  }
}